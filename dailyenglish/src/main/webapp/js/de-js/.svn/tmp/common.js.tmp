	}
	dateStr += "/" + String(date.getMonth() + 1);
	dateStr += "/" + date.getDate();
	var hour = date.getHours();
	var minute = date.getMinutes();
	if(hour == 0){
		dateStr += " 00";
	}else if(hour>0 && hour<10){
		dateStr += " 0" + hour;
	}
	if(minute == 0){
		dateStr += ":00";
	}else if(minute>0 && minute<10){
		dateStr += ":0" + minute;
