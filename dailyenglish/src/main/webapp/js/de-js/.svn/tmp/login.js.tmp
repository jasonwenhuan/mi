function login() {
	var name = $("#user").attr("value");
	var psw = $("#password").attr("value");
	if (name == "请输入用户名或邮箱地址") {
		alert("请输入您的用户名或邮箱！");
	} else {
		if (psw == "") {
			alert("密码不能为空！");
		} else {
					jUserLoginIn.userLoginIn(name, psw, function(data) {
						if (data) {
							alert("您已成功登录");
							jUserLoginIn.saveUserLoginSession(name, function(data) {
							window.location = "/pages/dailyEnglishPage.html";
							});
						} else {
							alert("用户名或密码错误！请重新输入！");
							$("#password").attr("value", "");
						}
					});
		}
	}
}